@using ASTE.Modules.APIDiscovery.db.Entities
@model List<Module>
@{
        ViewBag.Title = "Modules frontpage";
}

    <div class="row">
        <div class="col-sx-12 col-md-12">
            <h2>Modules</h2>
            @if (TempData["error"] != null)
            {
            <p style="color:red;">
               @TempData["error"].ToString()
            </p>
            }
            @if (Model != null && Model.Count > 0)
            {
            <table class=".table-striped" cellpadding="5">
                <thead>
                    <tr>
                        <th>GUID</th>
                        <th>Name</th>
                        <th>Active</th>
                        <th>Created</th>
                        <th>Last Modified</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                @foreach (var m in Model)
                {

                    <tr>
                        <td>
                            @m.guid
                        </td>
                        <td>
                            @m.name
                        </td>
                        <td>
                            @m.active
                        </td>
                        <td>
                            @m.created.ToString()
                        </td>
                        <td>
                            @m.modified.ToString()
                        </td>
                        <td>
                            <a href='@Url.Action("Edit","Module",new { module_id = m.id })' class="btn btn-default" >Edit</a>
                        </td>
                        <td>
                            <a href='@Url.Action("Delete","Module",new { module_id = m.id })' class="btn btn-default" >Delete</a>
                        </td>
                    </tr>
                }
            </table>
            <p><a href="@Url.Action("New","Module")">Add new module</a></p>
            }
            else
            {
                <p>No existing modules. <a href="@Url.Action("New","Module")">Add new module</a></p>

            }
        </div>
    </div>
            


